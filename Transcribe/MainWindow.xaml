<Window x:Class="Transcribe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ILIS错误监视工具" Height="25" Width="100"  >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Content="开始" Name="BtnStart" Click="BtnStart_Click" Grid.Column="0"></Button>
        <Button Content="停止" Name="BtnStop" Click="BtnStop_Click" Visibility="Collapsed" Grid.Column="0"></Button>
        <Button Content="退出" Name="BtnExit" Click="BtnExit_Click" Grid.Column="1"></Button>
    </Grid>
</Window>
